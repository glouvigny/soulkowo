{
  "name": "SoulKowo",
    "description": "A NetSoul client for Chrome/Chrome OS.",
    "version": "0.5",
    "app": {
        "background": {
            "persistent": true,
            "scripts": [
                "scripts/std.js",
                "scripts/tcp-client.js",
                "scripts/persistent.js",
                "scripts/launcher.js",
                "scripts/notifications.js",
                "scripts/background.js"
            ]
        }
    },
    "offline_enabled": true,
    "permissions": [
        {
            "socket": [
                "tcp-connect:ns-server.epita.fr:4242"
            ]
        },
        "background",
        "storage",
        "notifications"
    ],
    "icons": {
            "16": "img/icon-16.png",
            "48": "img/icon-48.png",
            "128": "img/icon-128.png",
            "256": "img/icon-256.png"
    },
    "manifest_version": 2
}